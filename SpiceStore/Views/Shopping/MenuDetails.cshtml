@model SpiceStore.Models.ShoppingCart

@{
    ViewData["Title"] = "MenuDetails";
}

<h1 style="color:dodgerblue">Item Details</h1>

<div class="bg-white">
    
    <form method="post">
        <div class="card">
            <div class="card-body">
               
                <br />
                <div class="row">
                    <div class="col">

                        <div class="form-group row">
                            <label class="col-md-4" asp-for="MenuItem.Name"></label> &nbsp; &nbsp;
                            <input asp-for="MenuItem.Name" class="form-control col-md-4" readonly />
                        </div>

                        <div class="form-group row">
                            <label class="col-md-4" asp-for="MenuItem.Description"></label> &nbsp; &nbsp;
                            <textarea asp-for="MenuItem.Description" class="form-control col-md-4" readonly></textarea>
                        </div>

                        <div class="form-group row">
                            <label class="col-md-4" asp-for="MenuItem.Price"></label> &nbsp; &nbsp;
                            <input asp-for="MenuItem.Price" class="form-control col-md-4" readonly/>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-4">
                                <label>Category</label>
                            </div>
                            <div class="col-md-4" id="static-list-div">                              
                                <select disabled id="ddlCategorylist" asp-for="MenuItem.CategoryKey" asp-items="ViewBag.CategoryKey" class="form-control"></select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-4">
                                <label>Sub Category</label>
                            </div>
                            <div class="col-md-4" id="dynamic-list-div">
                                <p id="dynamiclist">
                                    <select disabled id="ddlSubCategorylist" asp-for="MenuItem.SubCategoryKey" asp-items="ViewBag.SubCategoryKey" class="form-control">
                                        <option>Select SubCategory</option>
                                    </select>
                                </p>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-4">
                                <label>Spicyness</label>
                            </div>
                            <div class="col-md-4">
                                <select id="ddlSpicy" asp-for="MenuItem.spicy" asp-items="Html.GetEnumSelectList<spicy>()" class="form-control"></select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-4">
                                <label>Count</label>
                            </div>
                            <div class="col-md-4">
                                <input name="Count" type="number" value="1"/>
                            </div>
                        </div>

                        <div class="row form-group offset-4">
                            <button class="btn bg-success form-control col-md-4" asp-action="UpdateMenu" asp-controller="MenuItem">Add to Cart</button>&nbsp; &nbsp; &nbsp;
                            <button class="btn btn-primary form-control col-md-4" asp-action="Index" asp-controller="Home">Back to List</button>
                        </div>
                    </div>
                    <div class="col-auto">
                        <div class="form-group row col-12 pb-4">
                            <img src="@ViewBag.MenuUrl" width="150px" height="150px" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>

@model SpiceStore.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1 style="color:blue">Login</h1>

<hr />
<div class="row bg-white">
    <div class="col-md-4">
        <br/>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Email" class="control-label col-md-5"></label>
                <input asp-for="Email" class="form-control col-md-7" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="control-label col-md-5"></label>
                <input asp-for="Password" class="form-control col-md-7" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check row">
                <label class="form-check-label col-md-5">
                    <input class="form-check-input" col-md-5 asp-for="Remember" /> @Html.DisplayNameFor(model => model.Remember)
                </label>
            </div>
            <div class="form-group row offset-4">
                <input type="submit" value="Create" class="btn btn-primary col-md-7" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


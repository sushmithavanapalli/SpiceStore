<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SpiceStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" /><link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>

<body class="bg-light">

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3 bg-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SpiceStore</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">

                        @if (User.IsInRole("Manager"))
                        {
                            <li class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle text-light" data-toggle="dropdown" role="button" aria-expanded="false">Content Management </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li><a asp-action="CategoryList" asp-controller="Category" class="dropdown-item">Category</a></li>
                                    <li><a asp-action="SubCatList" asp-controller="SubCategory" class="dropdown-item">Sub Category</a></li>
                                    <li><a asp-action="MenuList" asp-controller="MenuItem" class="dropdown-item">Menu Items</a></li>
                                    <li><a asp-action="ViewCoupon" asp-controller="Coupon" class="dropdown-item">Coupons</a></li>
                                    <li><a asp-action="AllUsers" asp-controller="User" class="dropdown-item">Users</a></li>
                                </ul>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">Roles</a>
                            </li>
                        }

                        <div class="navbar-nav ml-auto action-button">
                            <partial name="_SignInPartial" />

                        </div>

                    </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container bg-light">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2020 - SpiceStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
<script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>

<link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
<script src="~/js/site.js" asp-append-version="true"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('.dropdown-toggle').dropdown();
    });
</script>
@RenderSection("Scripts", required: false)
@RenderSection("Catscript", required: false)
</body>
</html>
